---
import styles from "./QuoteForm.module.css";
import Button from "./Button.astro";

const { action = "#success" } = Astro.props;
---
<form class={styles.form} action={action} method="get">
  <div class={styles.row}>
    <label class={styles.field}>
      Name
      <input name="name" type="text" required autocomplete="name" />
    </label>
    <label class={styles.field}>
      Email
      <input name="email" type="email" required autocomplete="email" />
    </label>
  </div>
  <div class={styles.row}>
    <label class={styles.field}>
      Phone (optional)
      <input name="phone" type="tel" autocomplete="tel" />
    </label>
    <label class={styles.field}>
      Business name
      <input name="business" type="text" required autocomplete="organization" />
    </label>
  </div>
  <label class={styles.field}>
    Service needed
    <select name="service" required>
      <option value="">Select a service</option>
      <option>Web Design</option>
      <option>Branding</option>
      <option>Photography</option>
      <option>Content Systems</option>
    </select>
  </label>
  <div class={styles.row}>
    <label class={styles.field}>
      Suburb
      <input name="suburb" type="text" placeholder="e.g. Central District" required />
    </label>
    <label class={styles.field}>
      Budget range
      <select name="budget" required>
        <option value="">Select a range</option>
        <option>$5k - $10k</option>
        <option>$10k - $25k</option>
        <option>$25k - $50k</option>
        <option>$50k+</option>
      </select>
    </label>
  </div>
  <label class={styles.field}>
    Timeline
    <select name="timeline" required>
      <option value="">Select a timeline</option>
      <option>2-4 weeks</option>
      <option>4-8 weeks</option>
      <option>8-12 weeks</option>
      <option>Flexible</option>
    </select>
  </label>
  <label class={styles.field}>
    Message
    <textarea name="message" rows="4" required></textarea>
  </label>
  <label class="sr-only">
    Company
    <input name="company" type="text" tabindex="-1" autocomplete="off" />
  </label>
  <div class={styles.actions}>
    <Button type="submit">Get a quote</Button>
    <p class={styles.note}>
      Concept demo — <a href="https://amplifycreativelab.com" target="_blank" rel="nofollow noopener noreferrer">amplifycreativelab.com</a>
    </p>
  </div>
</form>
<div id="success" class={styles.success} tabindex="-1" role="status" aria-live="polite">
  <h3>Thanks, we will reply within two business days.</h3>
  <p>We will send a project outline and next steps after we review your details.</p>
</div>
