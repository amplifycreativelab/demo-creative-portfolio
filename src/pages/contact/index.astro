---
import BaseLayout from "../../layouts/BaseLayout.astro";
import QuoteForm from "../../components/QuoteForm.astro";
import { site } from "../../data/site";
import styles from "./_index.module.css";
---
<BaseLayout title="Contact" description="Request a quote for a Creative Portfolio project.">
  <section class={styles.contact}>
    <div class="container grid-12">
      <div class={styles.formCol}>
        <p class="kicker">Contact</p>
        <h1>Get a quote.</h1>
        <p class={styles.formIntro}>
          Share the essentials and we will reply within two business days.
        </p>
        <QuoteForm />
      </div>
      <div class={styles.infoCol}>
        <div class={styles.infoBlock}>
          <h2>What happens next</h2>
          <ol>
            <li>We review scope and confirm fit.</li>
            <li>We send a plan, timeline, and estimate.</li>
            <li>We kick off with a 60-minute discovery session.</li>
          </ol>
        </div>
        <div class={styles.infoBlock}>
          <h3>Response time</h3>
          <p>Within 2 business days. Non-indexed concept demo.</p>
        </div>
        <div class={styles.infoBlock}>
          <h3>Focus areas</h3>
          <p>{site.areasServed.join(", ")}</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
